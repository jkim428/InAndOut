<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/summary_background"
    tools:context="edu.orangecoastcollege.cs273.jkim428.inandout.SummaryActivity">

    <TextView
        android:id="@+id/orderTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:layout_marginTop="@dimen/summaryTitleMarginTop"
        android:layout_marginBottom="@dimen/summaryTitleMarginBottom"
        android:layout_marginLeft="@dimen/summaryBodyMarginLeft"
        android:text="test"
        android:textSize="@dimen/textSizeLarge"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/itemsOrderedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginLeft="@dimen/summaryBodyMarginLeft"
        android:layout_gravity="fill_horizontal"
        android:text = "test"
        android:gravity="left"/>

    <TextView
        android:id="@+id/subtotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_marginLeft="@dimen/summaryBodyMarginLeft"
        android:layout_gravity="fill_horizontal"
        android:text = "test"
        android:gravity="left"/>

    <TextView
        android:id="@+id/taxTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_marginLeft="@dimen/summaryBodyMarginLeft"
        android:layout_gravity="fill_horizontal"
        android:text = "test"
        android:gravity="left"/>

    <Button
        android:id="@+id/startNewOrderButton"
        android:text="@string/start_new_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:gravity="center"
        android:layout_marginLeft="@dimen/summaryBodyMarginLeft"
        android:layout_marginTop="@dimen/startNewOrderButtonMarginTop"
        android:onClick="startNewOrder" />

</GridLayout>
